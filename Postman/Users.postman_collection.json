	"item": [
		{
			"name": "Register",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"User Register\", function () {",
							"    var jsonData = pm.response.json();",
							"    if( pm.response.to.have.status(201)){",
							"        pm.environment.set(\"USER_NAME\", jsonData.username);",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"{{EMAIL}}\",\n    \"password\": \"{{PASSWORD}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{BASE_URL}}/users/register",
					"host": [
						"{{BASE_URL}}"
					],
					"path": [
						"users",
						"register"
					]
				}
			},
			"response": []
		},
		{
			"name": "login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"User Login\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    if( pm.response.to.have.status(200)){\r",
							"        pm.environment.set(\"JWT_TOKEN\", jsonData.token);\r",
							"    }\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"{{USER_NAME}}\",\n    \"password\": \"{{PASSWORD}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{BASE_URL}}/users/login",
					"host": [
						"{{BASE_URL}}"
					],
					"path": [
						"users",
						"login"
					]
				}
			},
